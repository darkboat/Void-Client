package me.rexysaur.void_.Client.util;

import java.util.Date;
import java.util.Timer;
import java.util.TimerTask;
import java.util.concurrent.Callable;

public class Interval {
	protected static boolean isTiming = true;
	
	public Interval(int time, Object object)
	{
		Timer timer = new Timer();
		timer.schedule(new IntervalTimer(time, object), time * 1000);
	}
	
	public void cancel()
	{
		Interval.isTiming = false;
	}

	class IntervalTimer extends TimerTask{
		public int time;
		public Object func;
		
		public IntervalTimer(int time, Object object) {
			this.time = time;
			this.func = object;
		}

		@Override
		public void run() {
			if (Interval.isTiming)
			{
				try {
					this.func.call();
				} catch (Exception e) {
					e.printStackTrace();
				}
				
				Timer timer = new Timer();
				timer.schedule(new IntervalTimer(time, func), time * 1000);		
			}
		}
	}
}