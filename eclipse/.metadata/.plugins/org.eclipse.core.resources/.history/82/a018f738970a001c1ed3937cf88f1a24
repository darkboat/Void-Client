package me.rexysaur.void_.Client;

import me.rexysaur.void_.Client.cosmetics.CosmeticCape;

public class Player {
	public static String username = "rexysuar";
	public static int money = 100;
	
	public static boolean hasEquippedCape = false;
	public static CosmeticCape equippedCape = null;
	
	public static void equipCape(CosmeticCape cape)
	{
		Player.hasEquippedCape = true;
		Player.equippedCape = cape;
	}
	
	public static void dequipCape()
	{
		Player.hasEquippedCape = false;
		Player.equippedCape = null;
	}
}
