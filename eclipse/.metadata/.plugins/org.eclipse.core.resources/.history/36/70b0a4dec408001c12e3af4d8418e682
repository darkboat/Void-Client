package me.rexysaur.void_.Client.hud.mod.impl;

import java.util.ArrayList;
import java.util.List;

import org.lwjgl.input.Mouse;

import me.rexysaur.void_.Client.hud.mod.HudMod;

public class CPSMod extends HudMod{
	private List<Long> clicks = new ArrayList<Long>();
	private boolean wasPressed;
	private long lastPressed;
	
	public CPSMod()
	{
		super("CPS", 100, 150);
	}
	
	@Override
	public void draw()
	{
		if (this.enabled)
		{
			final boolean pressed = Mouse.isButtonDown(0);
			
			if(pressed != this.wasPressed)
			{
				this.lastPressed = System.currentTimeMillis();
				this.wasPressed = pressed;

				if(pressed)
				{
					if(this.lastPressed != null)
					{
						
					}
					this.clicks.add(this.lastPressed);
				}
			}
			
			fr.drawStringWithShadow(getCPS(), getX(), getY(), -1);
			super.draw();
		}
	}
	
	@Override
	public void renderDummy(int mouseX, int mouseY)
	{
		if (this.enabled)
		{
			fr.drawString(name,  getX(), getY(), -1);
			
			super.renderDummy(mouseX, mouseY);
		}
	}
	
	@Override
	public int getWidth()
	{
		return fr.getStringWidth(getCPS());
	}
	
	@Override
	public int getHeight()
	{
		return fr.FONT_HEIGHT;
	}
	
	public String getCPS()
	{
		return "§0[§6CPS§f:" + Integer.toString(getCPSInt()) + "§0]";
	}
	
	private int getCPSInt()
	{
		final long time = System.currentTimeMillis();
		this.clicks.removeIf(aLong -> time > aLong + 1000 );
		return this.clicks.size();
	}
}
