package me.rexysaur.void_.Client.cosmetics;

import java.awt.Color;

import net.minecraft.client.entity.AbstractClientPlayer;
import net.minecraft.client.renderer.entity.layers.LayerRenderer;

public class CosmeticHat implements LayerRenderer<AbstractClientPlayer>{
	private String name;
	private int price;
	private Color col;
	
	public CosmeticHat(String name, int price, Color col)
	{
		this.name = name;
		this.price = price;
		this.col = col;
	}
	
	public String getname()
	{
		return this.name;
	}
	
	public int getPrice()
	{
		return this.price;
	}
	
	public Color getColor()
	{
		return this.col;
	}

	@Override
	public void doRenderLayer(AbstractClientPlayer player, float limbSwing, float p_177141_3_,
			float partialTicks, float p_177141_5_, float p_177141_6_, float p_177141_7_, float scale) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public boolean shouldCombineTextures() {
		// TODO Auto-generated method stub
		return false;
	}
}
