package me.rexysaur.void_.Client.cosmetics;

import java.util.ArrayList;
import java.util.Set;

import me.rexysaur.void_.Client.Client;
import net.minecraft.util.ResourceLocation;

public class HatManager {
	public static boolean hasEquippedhat = false;
	public static CosmeticCape equippedCape = null;
	
	public static void equipHat(CosmeticHat hat)
	{
		HatManager.hasEquippedCape = true;
		HatManager.equippedCape = hat;
	}
	
	public static void dequipCape()
	{
		HatManager.hasEquippedCape = false;
		HatManager.equippedCape = null;
	}
	
	public static boolean hasEquippedHat(CosmeticCape hat)
	{
		return HatManager.equippedHat.equals(hat);
	}
	
	public static Class<Set<CosmeticHat>> getHat(String name)
	{
		Class<Set<CosmeticHat>> hat = null;
		
		for (Class<Set<CosmeticHat>> c : (ArrayList<Class<Set<CosmeticHat>>>) Client.INSTANCE.cosmeticmanager.hats)
		{
			if(c.getName().equals(name))
			{
				hat = c;
			}
		}

		return hat;
	}
	
	public static ResourceLocation loadCape()
	{
		return CapeManager.equippedCape.getResource();
	}
}
